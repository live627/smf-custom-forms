{
    "autoload": {
        "psr-4": {
            "CustomForm\\": "src/CustomForm/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "repositories": [
        {
            "url": "https://github.com/SimpleMachines/SMF.git",
            "type": "vcs"
        }
    ],
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "squizlabs/php_codesniffer": "^3.6",
        "scrutinizer/ocular": "^1.9",
        "simplemachines/smf": "dev-release-3.0"
    },
    "scripts": {
        "phpunit": "phpunit --testdox",
        "lint": "php-cs-fixer fix --dry-run --verbose --show-progress=dots",
        "lint-fix": "php-cs-fixer fix --verbose --show-progress=dots",
        "phpcs": "phpcs --standard=./ ./src",
        "phpcbf": "phpcbf --standard=./ ./src"
    },
    "version": "4.1.0"
}
